<%= form_with(model: [@category, @product], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sku %>
    <%= form.text_field :sku, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :size %>
    <%= form.text_field :size, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :mrp %>
    <%= form.number_field :mrp, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :selling_price %>
    <%= form.number_field :selling_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :images, 'Upload Images' %>
    <% if @product.images.attached? %>
      <% @product.images.each do |image| %>
      <%= form.hidden_field :images, multiple: true, value: image.signed_id, class: "form-control" %>
        <%= image_tag(image, height: 100) %>
        <%= link_to "Remove image", remove_image_product_path(image), data: {confirm: 'are you sure?',turbo_method: :delete } %>
      <% end %>
    <% end %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <%= form.submit "Save Product", class: "btn btn-primary" %>
<% end %>
