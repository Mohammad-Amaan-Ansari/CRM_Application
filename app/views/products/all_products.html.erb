<div class="container mt-4">
  <h1>All Products</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product NO</th>
        <th>Name</th>
        <th>SKU</th>
        <th>Price</th>
        <th>Category</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each_with_index do |product, index| %>
        <tr>
          <td><%= (index + 1) %></td>
          <td><%= product.name %></td>
          <td><%= product.sku %></td>
          <td>$<%= product.price %></td>
          <td><%= product.category.c_name %></td> <!-- Display associated category -->
          <td>
            <%= link_to 'Show', category_product_path(product.category, product), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
